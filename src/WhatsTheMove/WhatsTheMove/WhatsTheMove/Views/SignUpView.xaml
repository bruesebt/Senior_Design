<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="WhatsTheMove.Views.SignUpView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:WhatsTheMove.Core.ViewModels;assembly=WhatsTheMove.Core"
    BackgroundColor="{DynamicResource SecondaryBackgroundColor}">
    <ContentPage.Content>

        <StackLayout
            HorizontalOptions="Center"
            Orientation="Vertical"
            VerticalOptions="Center">

            <!--  Logo  -->
            <Frame
                Margin="10"
                Padding="5"
                BackgroundColor="{StaticResource AccentBackgroundColor}"
                CornerRadius="10"
                HorizontalOptions="CenterAndExpand">
                <Image Source="WhatsTheMoveLogo.png" />
            </Frame>

            <!--  Signup  -->
            <StackLayout
                Padding="25"
                Orientation="Vertical"
                VerticalOptions="Center">
                <Label
                    HorizontalTextAlignment="Center"
                    Style="{StaticResource TitleAccentLabelStyle}"
                    Text="Sign up" />
                <Label
                    HorizontalTextAlignment="Center"
                    Style="{StaticResource AccentLabelStyle}"
                    Text="Please fill out the following fields to create an account." />
                <Entry
                    Placeholder="First name"
                    PlaceholderColor="{DynamicResource TertiaryFontColor}"
                    TextColor="White" />
                <Entry
                    Placeholder="Last name"
                    PlaceholderColor="{DynamicResource TertiaryFontColor}"
                    TextColor="White" />
                <StackLayout Orientation="Horizontal" Padding="5">
                    <Label
                    TextColor="{DynamicResource TertiaryFontColor}"
                    Text="Date of birth:" 
                    FontSize="Body"/>
                    <!-- TO DO: fix small gap -->
                    <DatePicker
                    TextColor="White"
                    x:Name="userAge"/>
                </StackLayout>\
                <!--TO DO: make dropdown-->
                <Entry
                    Placeholder="Gender"
                    PlaceholderColor="{DynamicResource TertiaryFontColor}"
                    TextColor="White" />
                <Entry
                    Placeholder="Email"
                    PlaceholderColor="{DynamicResource TertiaryFontColor}"
                    TextColor="White" />
                <Entry
                    Placeholder="Username"
                    PlaceholderColor="{DynamicResource TertiaryFontColor}"
                    TextColor="White" />
                <Entry
                    IsPassword="True"
                    Placeholder="Password"
                    PlaceholderColor="{DynamicResource TertiaryFontColor}"
                    TextColor="White" />
                <Entry
                    Placeholder="Confirm Password"
                    PlaceholderColor="{DynamicResource TertiaryFontColor}"
                    TextColor="White" />
                <Button Style="{StaticResource PrimaryButtonStyle}" Text="Sign up" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>