<?xml version="1.0" encoding="UTF-8" ?>
<Grid
    x:Class="WhatsTheMove.UI.Controls.ActivityCard"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:models="clr-namespace:WhatsTheMove.Data.Models;assembly=WhatsTheMove.Data.Library"
    Padding="10"
    x:DataType="models:Activity">
    <Frame Style="{StaticResource ActivityCard}">
        <StackLayout Orientation="Horizontal">
            <Image Source="{Binding Icon}" WidthRequest="66" />
            <StackLayout VerticalOptions="Center">
                <Label
                    Style="{StaticResource PrimaryLabelStyle}"
                    Text="{Binding Name}"
                    VerticalOptions="Center" />
                <Label
                    Style="{StaticResource AccentLabelStyle}"
                    Text="{Binding User_Ratings_Total}"
                    VerticalOptions="Center" />
            </StackLayout>
        </StackLayout>
    </Frame>
</Grid>